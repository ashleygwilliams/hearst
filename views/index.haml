%h1 - win fashion week -
.singly.span12
  - unless @profiles
    %h2 Join the Battle
    - %w[twitter instagram].each do |service|
      %a.signin.btn.btn-primary{:href=>"/auth/singly?service=#{service}"} Connect with "#{service.capitalize}"
.trending.span6
  %h3 #Trending
  %ol  
  - @trends.each do |trend|
    - bar_width = trend[:total_mentions]*15
    %li
      .bar{:style=> "width: #{bar_width}px;"}
      .trend= trend[:name]
.leaderboard.span4
  %h3 #Leaderboard
  %ol
    - User.all.each do |user|
      %li
        %img{:src => user[:image] }
        %h2 Score: #{User.get_user_score(user[:id])}
.editorial.span12
  %h3 #Hearst Editorial
  %ol
    - @articles["items"].each do |article|
      - if article["author_first_name"] && article["author_last_name"]
        - name = article["author_first_name"] + " " + article["author_last_name"]
        - if Hearst::EDITORS[name]
          %li
            %a{:href=> "#{article["canonical_url"]}"}
              %span.title= article["title"]
            %span.tease= article["promo_teaser"]
            via
            %a{:href => "http://www.twitter.com/#{Hearst::EDITORS[name]}"}
              %span.editor= Hearst::EDITORS[name]
